#include <iostream>
#include "sound.h"
#include "gui.h"
#include "globals.h"
#include <filesystem>

using namespace std;
namespace fs = filesystem;

std::string filePath = "musics/";
std::string musicName = "You didn’t know Music Video ｜ Hazbin Hotel.wav";

int main() {
  const 

  if (!initSoundEngine()) {
    cerr << "Failed to initialize sound engine" << endl;
    return 1;
  }

  if (!playMusic(filePath+musicName)) {
    cerr << "Failed to play music" << endl;
    cleanupSoundEngine();
    return 1;
  }

  displayWindow();

  runFLTK();

  cleanupSoundEngine();

  return 0;
}

